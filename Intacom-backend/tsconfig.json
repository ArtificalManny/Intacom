{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020", 
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",        
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "moduleResolution": "node", 
    "esModuleInterop": true     
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
